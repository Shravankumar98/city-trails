---
import MainLayout from "../layouts/MainLayout.astro";
import Section from "../components/ui/Section.astro";
import Button from "../components/ui/Button.jsx";
import FeaturedCarousel from "../components/FeaturedCarousel.jsx";
import InteractiveMap from "../components/InteractiveMap.jsx";
import HeroSection from "../components/HeroSection.astro";
import AboutSection from "../components/AboutSection.astro";
import CategoryFilter from "../components/CategoryFilter.jsx";
import { places } from "../data/places.js";

const heroPlace = places[Math.floor(Math.random() * places.length)];
const heroImage = heroPlace.image;
---

<MainLayout
  title="Bangalore Tourism â€“ Explore the Garden City"
  description="Official tourism guide to Bangalore covering attractions, culture, parks, food, and heritage."
>
  <HeroSection heroImage={heroImage} />
  <AboutSection />
  <Section id="featured" title="Featured Attractions" subtitle="Signature experiences of Bangalore" background="featured">
    <FeaturedCarousel client:load />
  </Section>
  <Section id="map" title="Explore the City" subtitle="Navigate attractions across Bangalore" background="map">
    <InteractiveMap client:load />
  </Section>
  <Section id="places" title="Must-Visit Places" subtitle="Historic landmarks, gardens, and cultural icons" background="places">
    <CategoryFilter client:load places={places.slice(0,6)} />
    <div class="mt-10 text-center">
      <Button href="/places" variant="primary">
        Discover More Places
      </Button>
    </div>
  </Section>
</MainLayout>
