---
import MainLayout from "../layouts/MainLayout.astro";
import CategoryFilter from "../components/CategoryFilter.jsx";
import Section from "../components/ui/Section.astro";
import { places } from "../data/places.js";

---

<div>
  <MainLayout title="All Places in Bangalore">

    <!-- HEADER -->
    <section class="relative h-[300px] md:h-[420px]">
      <img src={places[0].image} alt="Bangalore Places" class="h-full w-full object-cover" />
      <div class="absolute inset-0 flex flex-col gap-2 items-center justify-center bg-black/60 px-4">
        <h1 class="text-center text-3xl sm:text-4xl md:text-5xl font-bold text-white tracking-wide">
          Must-Visit Places
        </h1>
        <p class="text-white/70 tracking-wide">Historic landmarks, gardens, and cultural icons</p>
      </div>
    </section>

    <!-- FILTERS -->
    <Section id="places">
      <CategoryFilter client:load places={places} />
    </Section>
  </MainLayout>
</div>

