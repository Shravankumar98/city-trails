---
import MainLayout from "../../layouts/MainLayout.astro";
import PlaceCard from "../../components/PlaceCard.astro";
import CategoryFilter from "../../components/CategoryFilter.jsx";
import Button from "../../components/ui/Button.jsx";
import Section from "../../components/ui/Section.jsx";
import { places } from "../../data/places.js";
import { useState } from "react";

const categories = ["All", ...new Set(places.map(p => p.category))];
---

<div client:load>
  <MainLayout title="All Places in Bangalore">

    <!-- HEADER -->
    <section class="relative h-[300px] md:h-[420px]">
      <img src={places[0].image} alt="Bangalore Places" class="h-full w-full object-cover" />
      <div class="absolute inset-0 flex items-center justify-center bg-black/60 px-4">
        <h1 class="text-center text-3xl sm:text-4xl md:text-5xl font-bold text-white tracking-wide">
          Must-Visit Places
        </h1>
      </div>
    </section>

    <!-- FILTERS -->
    <Section id="places" title="Must-Visit Places" subtitle="Historic landmarks, gardens, and cultural icons" background="places">
  <CategoryFilter client:load places={places} />
  <div class="mt-10 text-center">
    <Button href="/places" variant="primary">
      Discover More Places
    </Button>
  </div>
</Section>
  </MainLayout>
</div>

