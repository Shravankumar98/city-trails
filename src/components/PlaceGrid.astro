---
import PlaceCard from "./PlaceCard.astro";
const { places } = Astro.props;
---

<div
  class="grid gap-6 sm:gap-8
         grid-cols-1
         md:grid-cols-2
         lg:grid-cols-3"
  style="background-color: var(--surface-places);"
>
  {places.map((place) => (
    <PlaceCard place={place} />
  ))}
</div>
