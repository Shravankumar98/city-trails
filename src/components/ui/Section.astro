---
// Section.astro
const {
  id,
  title,
  subtitle,
  background = "places", // default
} = Astro.props;

const bgMap = {
  featured: "var(--surface-featured)",
  map: "var(--surface-map)",
  places: "var(--surface-places)",
  white: "var(--surface-white)",
  muted: "var(--surface-muted)",
  default: "var(--surface-places)",
};

const bgColor = bgMap[background] || bgMap.default;
---
<section
  id={id}
  style={`background-color: ${bgColor};`}
  class="border-t border-[var(--surface-divider)]"
>
  <div class="section">
    {title && <h2 class="section-title">{title}</h2>}
    {subtitle && <p class="section-subtitle">{subtitle}</p>}
    <slot />
  </div>
</section>
